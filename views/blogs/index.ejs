<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs") %>
<body>
    
  <%- include("../partials/nav.ejs") %>
    

    <div class="content ">
        <h2>All Blogs</h2>
        <div >
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <a  href="/blogs/<%= blog._id %>">
               <div class="border-left"> <h3  class="title"><%= blog.title %></h3>
                 <p  ><%=blog.snippet %></p>
               </div>
                </a>
                <%  }) %>
            </div>

     <%  }else { %>
        <p>there is no blogs to display...</p>
       <% } %>
    </div>
    <%- include("../partials/footer.ejs") %>
    
</body>
</html>